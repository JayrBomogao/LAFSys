rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Items collection rules
    match /items/{itemId} {
      // Allow reading items by anyone
      allow read: if true;
      
      // Allow creating items with any image format (including data URLs)
      allow create: if true;
      
      // Allow updating items
      allow update: if true;
      
      // Allow deleting items
      allow delete: if true;
    }
    
    // Claims collection rules
    match /claims/{claimId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
    }
    
    // Messages collection rules
    match /messages/{messageId} {
      allow read: if true;
      allow create: if true;
    }
    
    // Test collection (used for connection tests)
    match /test/{docId} {
      allow read, write: if true;
    }
    
    // Allow all operations for development until December 2025
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 12, 25);
    }
  }
}