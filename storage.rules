rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
      
      // Allow authenticated users to write new files
      allow write: if true; // For development; in production, consider restricting this
      
      // Allow item images to be uploaded by anyone
      match /items/{fileName} {
        allow write: if true;
      }
      
      // Allow draft images to be uploaded by anyone
      match /drafts/{fileName} {
        allow write: if true;
      }
    }
  }
}
